import "oaidl.idl";
import "ocidl.idl";

typedef [	public	]
struct
{
	hyper FunctionAddress;
	hyper TimesCalled;
	hyper MaxReentrance;
	hyper ExclusiveTime;
	hyper InclusiveTime;
} FunctionStatistics;

typedef [	public	]
struct
{
	FunctionStatistics Statistics;
	long ChildrenCount;
	[size_is(ChildrenCount)] FunctionStatistics *ChildrenStatistics;
} FunctionStatisticsDetailed;

[	object, uuid(2F5ECF23-E98B-4399-AB4F-3083264C481B), nonextensible, pointer_default(unique)	]
interface IProfilerFrontend : IUnknown
{
	HRESULT Initialize([in] BSTR executable, [in] hyper load_address, [in] hyper ticks_resolution);
	HRESULT UpdateStatistics([in] long count, [in, size_is(count)] FunctionStatisticsDetailed *statistics);
};

[	uuid(425E45FE-FD05-49C0-A505-93E88651EC36), version(1.0), helpstring("MicroProfiler Frontend 1.0 Type Library")	]
library MicroProfilerFrontendLib
{
	importlib("stdole2.tlb");

	struct FunctionStatistics;
	struct FunctionStatisticsDetailed;

	[ uuid(ABC1A8AB-31D5-475F-B541-987141CD4DB3) ]
	coclass ProfilerFrontend
	{
		[default] interface IProfilerFrontend;
	};
};
